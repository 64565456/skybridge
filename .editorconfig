# EditorConfig is awesome: https://EditorConfig.org
# visual studio 直接将该文件放置于工程目录下，无需插件默认支持
# visual studio code 需要安装 EditorConfig for VS Code 插件支持

root = true                         # 根目录的配置文件，编辑器会由当前目录向上查找，如果找到 `roor = true` 的文件，则不再查找

[*.{c,h,py,ld,in}]                  # 匹配所有的文件
indent_style = space                # 空格缩进
indent_size = 4                     # 缩进空格为4个
tab_width = 4                       # tab长度为4个
end_of_line = lf                    # 文件换行符是 linux 的 `\n`
charset = utf-8                     # 文件编码是 utf-8
trim_trailing_whitespace = true     # 不保留行末的空格
insert_final_newline = true         # 文件末尾添加一个空行
quote_type = double                 # 字符串使用双引号
max_line_length = off               # 一行最长字符数量
spaces_around_brackets = none       # 括号两边不空格
indent_brace_style = GNU            # brace使用GNU风格
spaces_around_operators = true      # 运算符两边都有空格
indent_brace_style = 1tbs           # 条件语句格式是 1tbs
